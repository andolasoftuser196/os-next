# Port Configuration for Docker Compose Override
# These ports are only exposed when docker-compose.override.yml is used

# Traefik Reverse Proxy
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_DASHBOARD_PORT=8080

# MySQL Database
MYSQL_PORT=3307

# PostgreSQL Database
POSTGRES_PORT=5433

# Redis Cache
REDIS_PORT=6380

# MinIO S3 Storage
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Memcached
MEMCACHED_DURANGO_PORT=11212
MEMCACHED_ORANGESCRUM_PORT=11213

# MinIO Credentials (optional, defaults: minioadmin/minioadmin)
# MINIO_ROOT_USER=minioadmin
# MINIO_ROOT_PASSWORD=minioadmin
