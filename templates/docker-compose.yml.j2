# Auto-generated Docker Compose configuration
# Domain: {{ domain }}
# Generated: {{ generated_date }}

services:
  # Traefik reverse proxy with SSL
  traefik:
    image: traefik:v2.10
    container_name: traefik
    restart: unless-stopped
    command:
      - "--api.insecure=true"
      - "--providers.file.directory=/etc/traefik/dynamic"
      - "--providers.file.watch=true"
      - "--entrypoints.web.address=:80"
      - "--entrypoints.websecure.address=:443"
      - "--entrypoints.web.http.redirections.entrypoint.to=websecure"
      - "--entrypoints.web.http.redirections.entrypoint.scheme=https"
    volumes:
      - ./traefik:/etc/traefik/dynamic:ro
      - ./certs:/certs:ro
    networks:
      traefik-network:
        ipv4_address: {{ traefik_ip }}

  # Durango - PHP 8.3 + PostgreSQL
  durango-pg:
    build:
      context: .
      dockerfile: Dockerfile
      target: php83
      args:
        BUILDER_UID: {{ builder_uid }}
    container_name: durango-pg
    restart: unless-stopped
    working_dir: /var/www/html
    volumes:
      - ./apps/durango-pg:/var/www/html
      - ./config/durango-apache.conf:/etc/apache2/sites-available/000-default.conf
      - ./config/php-custom-limits.ini:/etc/php/8.3/apache2/conf.d/99-custom-limits.ini
      - ./certs/{{ domain }}.crt:/usr/local/share/ca-certificates/{{ domain }}.crt:ro
    env_file:
      - ./os-v4/.env
    environment:
      - MEMCACHED_HOST=memcached-durango:11211
      - SSL_CERT_FILE=/usr/local/share/ca-certificates/{{ domain }}.crt
      - CURL_CA_BUNDLE=/usr/local/share/ca-certificates/{{ domain }}.crt
    networks:
      traefik-network:
        ipv4_address: 172.25.0.20
      durango-backend:
        ipv4_address: 172.26.0.20
    depends_on:
      - postgres16
      - memcached-durango
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.durango.rule=Host(`v4.{{ domain }}`)"
      - "traefik.http.routers.durango.entrypoints=websecure"
      - "traefik.http.routers.durango.tls=true"
      - "traefik.http.services.durango.loadbalancer.server.port=80"

  # Orangescrum - PHP 7.2 + MySQL
  orangescrum:
    build:
      context: .
      dockerfile: Dockerfile
      target: php72
      args:
        BUILDER_UID: {{ builder_uid }}
    container_name: orangescrum
    restart: unless-stopped
    working_dir: /var/www/html
    volumes:
      - ./apps/orangescrum:/var/www/html/orangescrum
      - ./os-v2/.env:/var/www/html/.env
      - ./config/orangescrum-apache.conf:/etc/apache2/sites-available/000-default.conf
      - ./certs/{{ domain }}.crt:/usr/local/share/ca-certificates/{{ domain }}.crt:ro
    environment:
      - MEMCACHED_HOST=memcached-orangescrum:11211
      - SSL_CERT_FILE=/usr/local/share/ca-certificates/{{ domain }}.crt
      - CURL_CA_BUNDLE=/usr/local/share/ca-certificates/{{ domain }}.crt
    networks:
      traefik-network:
        ipv4_address: 172.25.0.30
      orangescrum-backend:
        ipv4_address: 172.27.0.30
    depends_on:
      - mysql
      - memcached-orangescrum
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.orangescrum.rule=HostRegexp(`{subdomain:[a-z0-9-]+}.{{ domain }}`) && !Host(`v4.{{ domain }}`)"
      - "traefik.http.routers.orangescrum.entrypoints=websecure"
      - "traefik.http.routers.orangescrum.tls=true"
      - "traefik.http.services.orangescrum.loadbalancer.server.port=80"

  # PostgreSQL 16 for Durango
  postgres16:
    image: postgres:16.10
    container_name: postgres16
    restart: unless-stopped
    environment:
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: durango
      POSTGRES_USER: postgres
    volumes:
      - postgres-data:/var/lib/postgresql/data
      - ./postgres-init:/docker-entrypoint-initdb.d
    networks:
      durango-backend:
        ipv4_address: 172.26.0.10
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  # MySQL 8 for Orangescrum (native password, no strict mode)
  mysql:
    image: mysql:8.0
    container_name: mysql
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: rootpassword
      MYSQL_DATABASE: orangescrum
      MYSQL_USER: osuser
      MYSQL_PASSWORD: ospassword
      MYSQL_ROOT_HOST: '%'
    command: --default-authentication-plugin=mysql_native_password --sql-mode="" --bind-address=0.0.0.0
    volumes:
      - mysql-data:/var/lib/mysql
    networks:
      orangescrum-backend:
        ipv4_address: 172.27.0.10
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-prootpassword"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Redis for Durango Queue
  redis-durango:
    image: redis:7-alpine
    container_name: redis-durango
    restart: unless-stopped
    command: redis-server --maxmemory 256mb --maxmemory-policy allkeys-lru
    networks:
      durango-backend:
        ipv4_address: 172.26.0.12
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Memcached for Durango
  memcached-durango:
    image: memcached:1.6-alpine
    container_name: memcached-durango
    restart: unless-stopped
    command: memcached -m 128
    networks:
      durango-backend:
        ipv4_address: 172.26.0.11

  # Memcached for Orangescrum (separate instance to avoid key conflicts)
  memcached-orangescrum:
    image: memcached:1.6-alpine
    container_name: memcached-orangescrum
    restart: unless-stopped
    command: memcached -m 128
    networks:
      orangescrum-backend:
        ipv4_address: 172.27.0.11

  # MinIO S3-compatible storage
  minio:
    image: quay.io/minio/minio:latest
    container_name: minio
    restart: unless-stopped
    command: server /data --console-address ":9001"
    environment:
      - MINIO_ROOT_USER=${MINIO_ROOT_USER:-minioadmin}
      - MINIO_ROOT_PASSWORD=${MINIO_ROOT_PASSWORD:-minioadmin}
    volumes:
      - minio-data:/data
    networks:
      traefik-network:
        ipv4_address: 172.25.0.60
      durango-backend:
        ipv4_address: 172.26.0.60
      orangescrum-backend:
        ipv4_address: 172.27.0.60
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.minio-api.rule=Host(`storage.{{ domain }}`)"
      - "traefik.http.routers.minio-api.entrypoints=websecure"
      - "traefik.http.routers.minio-api.tls=true"
      - "traefik.http.routers.minio-api.service=minio-api"
      - "traefik.http.services.minio-api.loadbalancer.server.port=9000"
      - "traefik.http.routers.minio-console.rule=Host(`console.{{ domain }}`)"
      - "traefik.http.routers.minio-console.entrypoints=websecure"
      - "traefik.http.routers.minio-console.tls=true"
      - "traefik.http.routers.minio-console.service=minio-console"
      - "traefik.http.services.minio-console.loadbalancer.server.port=9001"
    healthcheck:
      test: ["CMD", "mc", "ready", "local"]
      interval: 30s
      timeout: 20s
      retries: 3

  # MailHog for email testing
  mailhog:
    image: mailhog/mailhog
    container_name: mailhog
    restart: unless-stopped
    networks:
      traefik-network:
        ipv4_address: 172.25.0.50
      durango-backend:
        ipv4_address: 172.26.0.50
      orangescrum-backend:
        ipv4_address: 172.27.0.50
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.mailhog.rule=Host(`mail.{{ domain }}`)"
      - "traefik.http.routers.mailhog.entrypoints=websecure"
      - "traefik.http.routers.mailhog.tls=true"
      - "traefik.http.services.mailhog.loadbalancer.server.port=8025"

  # Browser with VNC for testing
  browser:
    image: selenium/standalone-chrome:latest
    container_name: browser
    ports:
      - "4444:4444"  # Selenium WebDriver
      - "7900:7900"  # noVNC web interface
      - "5900:5900"  # VNC
    environment:
      - SE_VNC_NO_PASSWORD=1
      - SE_SCREEN_WIDTH=1366
      - SE_SCREEN_HEIGHT=768
    volumes:
      - ./certs:/certs:ro
    extra_hosts:
      - "v4.{{ domain }}:{{ traefik_ip }}"
      - "app.{{ domain }}:{{ traefik_ip }}"
      - "mail.{{ domain }}:{{ traefik_ip }}"
    entrypoint: >
      bash -c "
      sudo mkdir -p /usr/local/share/ca-certificates &&
      sudo cp /certs/{{ domain }}.crt /usr/local/share/ca-certificates/{{ domain }}.crt &&
      sudo update-ca-certificates &&
      mkdir -p /home/seluser/.pki/nssdb &&
      certutil -d sql:/home/seluser/.pki/nssdb -A -t 'C,,' -n '{{ domain }} CA' -i /certs/{{ domain }}.crt 2>/dev/null || true &&
      /opt/bin/entry_point.sh
      "
    shm_size: 2gb
    networks:
      traefik-network:
        ipv4_address: 172.25.0.100

volumes:
  postgres-data:
  mysql-data:
  minio-data:

networks:
  traefik-network:
    driver: bridge
    ipam:
      config:
        - subnet: 172.25.0.0/16
          gateway: 172.25.0.1
  durango-backend:
    driver: bridge
    ipam:
      config:
        - subnet: 172.26.0.0/16
          gateway: 172.26.0.1
  orangescrum-backend:
    driver: bridge
    ipam:
      config:
        - subnet: 172.27.0.0/16
          gateway: 172.27.0.1
