# Auto-generated Docker Compose configuration
# Domain: {{ domain }}
# Generated: {{ generated_date }}

name: orangescrum-{{ domain | replace('.', '-') }}

services:
  # Traefik reverse proxy with SSL
  traefik:
    image: traefik:v2.10
    container_name: {{ domain_prefix }}-traefik
    restart: unless-stopped
    command:
      - "--api.dashboard=true"
      - "--api.insecure=false"
      - "--providers.file.directory=/etc/traefik/dynamic"
      - "--providers.file.watch=true"
      - "--providers.docker=true"
      - "--providers.docker.exposedbydefault=false"
      - "--entrypoints.web.address=:80"
      - "--entrypoints.websecure.address=:443"
      - "--entrypoints.web.http.redirections.entrypoint.to=websecure"
      - "--entrypoints.web.http.redirections.entrypoint.scheme=https"
    volumes:
      - ./traefik:/etc/traefik/dynamic:ro
      - ./certs:/certs:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
    networks:
      traefik-network:
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.traefik-dashboard.rule=Host(`traefik.{{ domain }}`)"
      - "traefik.http.routers.traefik-dashboard.entrypoints=websecure"
      - "traefik.http.routers.traefik-dashboard.tls=true"
      - "traefik.http.routers.traefik-dashboard.service=api@internal"
      - "traefik.http.routers.traefik-dashboard.priority=100"

  # Durango - PHP 8.3 + PostgreSQL
{% if services.durango_pg %}
  durango-pg:
    build:
      context: .
      dockerfile: Dockerfile
      target: php83
      args:
        BUILDER_UID: {{ builder_uid }}
    container_name: {{ domain_prefix }}-durango-pg
    restart: unless-stopped
    working_dir: /var/www/html
    volumes:
      - ./apps/durango-pg:/var/www/html
      - ./config/durango-apache.conf:/etc/apache2/sites-available/000-default.conf
      - ./config/php-custom-limits.ini:/etc/php/8.3/apache2/conf.d/99-custom-limits.ini
      - ./certs/{{ domain }}.crt:/usr/local/share/ca-certificates/{{ domain }}.crt:ro
    env_file:
      - ./os-pg/.env
    environment:
      - SSL_CERT_FILE=/usr/local/share/ca-certificates/{{ domain }}.crt
      - CURL_CA_BUNDLE=/usr/local/share/ca-certificates/{{ domain }}.crt
    networks:
      traefik-network:
      durango-backend:
    depends_on:
      - postgres16
{% if services.memcached_durango %}
      - memcached-durango
{% elif services.redis_durango %}
      - redis-durango
{% endif %}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.durango.rule=Host(`selfhosted.{{ domain }}`)"
      - "traefik.http.routers.durango.entrypoints=websecure"
      - "traefik.http.routers.durango.tls=true"
      - "traefik.http.services.durango.loadbalancer.server.port=80"

{% endif %}
  # OrangeScrum V4 - PHP 8.3 + PostgreSQL
{% if services.orangescrum_v4 %}
  orangescrum-v4:
    build:
      context: .
      dockerfile: Dockerfile
      target: php83
      args:
        BUILDER_UID: {{ builder_uid }}
    container_name: {{ domain_prefix }}-orangescrum-v4
    restart: unless-stopped
    working_dir: /var/www/html
    volumes:
      - ./apps/orangescrum-v4:/var/www/html
      - ./config/durango-apache.conf:/etc/apache2/sites-available/000-default.conf
      - ./config/php-custom-limits.ini:/etc/php/8.3/apache2/conf.d/99-custom-limits.ini
      - ./certs/{{ domain }}.crt:/usr/local/share/ca-certificates/{{ domain }}.crt:ro
    env_file:
      - ./os-v4/.env
    environment:
      - SSL_CERT_FILE=/usr/local/share/ca-certificates/{{ domain }}.crt
      - CURL_CA_BUNDLE=/usr/local/share/ca-certificates/{{ domain }}.crt
    networks:
      traefik-network:
      durango-backend:
    depends_on:
      - postgres16
{% if services.memcached_durango %}
      - memcached-durango
{% elif services.redis_durango %}
      - redis-durango
{% endif %}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.orangescrum-v4.rule=Host(`v4.{{ domain }}`)"
      - "traefik.http.routers.orangescrum-v4.entrypoints=websecure"
      - "traefik.http.routers.orangescrum-v4.tls=true"
      - "traefik.http.services.orangescrum-v4.loadbalancer.server.port=80"

{% endif %}
  # OrangeScrum Cloud - FrankenPHP Binary (Production Cloud)
{% if services.orangescrum_cloud %}
  orangescrum-cloud:
    build:
      context: ./cloud-builder/orangescrum-cloud
      dockerfile: Dockerfile
    container_name: {{ domain_prefix }}-orangescrum-cloud
    restart: unless-stopped
    env_file:
      - ./os-v4/.env
    networks:
      traefik-network:
      durango-backend:
    depends_on:
      - postgres16
      - redis-durango
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.orangescrum-cloud.rule=Host(`cloud.{{ domain }}`)"
      - "traefik.http.routers.orangescrum-cloud.entrypoints=websecure"
      - "traefik.http.routers.orangescrum-cloud.tls=true"
      - "traefik.http.services.orangescrum-cloud.loadbalancer.server.port=80"

{% endif %}
  # OrangeScrum Cloud Queue Worker
{% if services.orangescrum_cloud_queue %}
  orangescrum-cloud-queue:
    build:
      context: ./cloud-builder/orangescrum-cloud
      dockerfile: Dockerfile
    container_name: {{ domain_prefix }}-orangescrum-cloud-queue
    restart: unless-stopped
    env_file:
      - ./os-v4/.env
    environment:
      - QUEUE_WORKER=true
    command: ["/orangescrum-app/osv4-prod", "php-cli", "bin/cake.php", "queue", "worker", "--verbose"]
    networks:
      durango-backend:
    depends_on:
      - postgres16
      - redis-durango

{% endif %}
  # Orangescrum - PHP 7.2 + MySQL
{% if services.orangescrum %}
  orangescrum:
    build:
      context: .
      dockerfile: Dockerfile
      target: php72
      args:
        BUILDER_UID: {{ builder_uid }}
    container_name: {{ domain_prefix }}-orangescrum
    restart: unless-stopped
    working_dir: /var/www/html
    volumes:
      - ./apps/orangescrum:/var/www/html/orangescrum
      - ./os-v2/.env:/var/www/html/.env
      - ./config/orangescrum-apache.conf:/etc/apache2/sites-available/000-default.conf
      - ./certs/{{ domain }}.crt:/usr/local/share/ca-certificates/{{ domain }}.crt:ro
    environment:
      - MEMCACHED_HOST=memcached-orangescrum:11211
      - SSL_CERT_FILE=/usr/local/share/ca-certificates/{{ domain }}.crt
      - CURL_CA_BUNDLE=/usr/local/share/ca-certificates/{{ domain }}.crt
    networks:
      traefik-network:
      orangescrum-backend:
    depends_on:
      - mysql
      - memcached-orangescrum
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.orangescrum.rule=HostRegexp(`{subdomain:[a-z0-9-]+}.{{ domain }}`) && !Host(`v4.{{ domain }}`) && !Host(`cloud.{{ domain }}`) && !Host(`selfhosted.{{ domain }}`) && !Host(`traefik.{{ domain }}`) && !Host(`storage.{{ domain }}`) && !Host(`console.{{ domain }}`) && !Host(`mail.{{ domain }}`)"
      - "traefik.http.routers.orangescrum.entrypoints=websecure"
      - "traefik.http.routers.orangescrum.tls=true"
      - "traefik.http.services.orangescrum.loadbalancer.server.port=80"

{% endif %}
  # PostgreSQL 16 for Durango
{% if services.postgres16 %}
  postgres16:
    image: postgres:16.10
    container_name: {{ domain_prefix }}-postgres16
    restart: unless-stopped
    environment:
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: durango
      POSTGRES_USER: postgres
    volumes:
      - postgres-data:/var/lib/postgresql/data
      - ./postgres-init:/docker-entrypoint-initdb.d
    networks:
      durango-backend:
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

{% endif %}
  # MySQL 8 for Orangescrum (native password, no strict mode)
{% if services.mysql %}
  mysql:
    image: mysql:8.0
    container_name: {{ domain_prefix }}-mysql
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: rootpassword
      MYSQL_DATABASE: orangescrum
      MYSQL_USER: osuser
      MYSQL_PASSWORD: ospassword
      MYSQL_ROOT_HOST: '%'
    command: --default-authentication-plugin=mysql_native_password --sql-mode="" --bind-address=0.0.0.0
    volumes:
      - mysql-data:/var/lib/mysql
    networks:
      orangescrum-backend:
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-prootpassword"]
      interval: 10s
      timeout: 5s
      retries: 5

{% endif %}
  # Redis for Durango Queue
{% if services.redis_durango %}
  redis-durango:
    image: redis:7-alpine
    container_name: {{ domain_prefix }}-redis-durango
    restart: unless-stopped
    command: redis-server --maxmemory 256mb --maxmemory-policy allkeys-lru
    networks:
      durango-backend:
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

{% endif %}
  # Memcached for Durango
{% if services.memcached_durango %}
  memcached-durango:
    image: memcached:1.6-alpine
    container_name: {{ domain_prefix }}-memcached-durango
    restart: unless-stopped
    command: memcached -m 128
    networks:
      durango-backend:

{% endif %}
  # Memcached for Orangescrum (separate instance to avoid key conflicts)
{% if services.memcached_orangescrum %}
  memcached-orangescrum:
    image: memcached:1.6-alpine
    container_name: {{ domain_prefix }}-memcached-orangescrum
    restart: unless-stopped
    command: memcached -m 128
    networks:
      orangescrum-backend:

{% endif %}
  # MinIO S3-compatible storage
{% if services.minio %}
  minio:
    image: quay.io/minio/minio:latest
    container_name: {{ domain_prefix }}-minio
    restart: unless-stopped
    command: server /data --console-address ":9001"
    environment:
      - MINIO_ROOT_USER=${MINIO_ROOT_USER:-minioadmin}
      - MINIO_ROOT_PASSWORD=${MINIO_ROOT_PASSWORD:-minioadmin}
    volumes:
      - minio-data:/data
    networks:
      traefik-network:
      durango-backend:
      orangescrum-backend:
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.minio-api.rule=Host(`storage.{{ domain }}`)"
      - "traefik.http.routers.minio-api.entrypoints=websecure"
      - "traefik.http.routers.minio-api.tls=true"
      - "traefik.http.routers.minio-api.service=minio-api"
      - "traefik.http.services.minio-api.loadbalancer.server.port=9000"
      - "traefik.http.routers.minio-console.rule=Host(`console.{{ domain }}`)"
      - "traefik.http.routers.minio-console.entrypoints=websecure"
      - "traefik.http.routers.minio-console.tls=true"
      - "traefik.http.routers.minio-console.service=minio-console"
      - "traefik.http.services.minio-console.loadbalancer.server.port=9001"
    healthcheck:
      test: ["CMD", "mc", "ready", "local"]
      interval: 30s
      timeout: 20s
      retries: 3

{% endif %}
  # MailHog for email testing
{% if services.mailhog %}
  mailhog:
    image: mailhog/mailhog
    container_name: {{ domain_prefix }}-mailhog
    restart: unless-stopped
    networks:
      traefik-network:
      durango-backend:
      orangescrum-backend:
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.mailhog.rule=Host(`mail.{{ domain }}`)"
      - "traefik.http.routers.mailhog.entrypoints=websecure"
      - "traefik.http.routers.mailhog.tls=true"
      - "traefik.http.services.mailhog.loadbalancer.server.port=8025"

{% endif %}
  # Browser with VNC for testing
{% if services.browser %}
  browser:
    image: selenium/standalone-chrome:latest
    container_name: {{ domain_prefix }}-browser
    ports:
      - "4444:4444"  # Selenium WebDriver
      - "7900:7900"  # noVNC web interface
      - "5900:5900"  # VNC
    environment:
      - SE_VNC_NO_PASSWORD=1
      - SE_SCREEN_WIDTH=1366
      - SE_SCREEN_HEIGHT=768
    volumes:
      - ./certs:/certs:ro
    extra_hosts:
      - "v4.{{ domain }}:{{ traefik_ip }}"
      - "app.{{ domain }}:{{ traefik_ip }}"
      - "mail.{{ domain }}:{{ traefik_ip }}"
    entrypoint: >
      bash -c "
      sudo mkdir -p /usr/local/share/ca-certificates &&
      sudo cp /certs/{{ domain }}.crt /usr/local/share/ca-certificates/{{ domain }}.crt &&
      sudo update-ca-certificates &&
      mkdir -p /home/seluser/.pki/nssdb &&
      certutil -d sql:/home/seluser/.pki/nssdb -A -t 'C,,' -n '{{ domain }} CA' -i /certs/{{ domain }}.crt 2>/dev/null || true &&
      /opt/bin/entry_point.sh
      "
    shm_size: 2gb
    networks:
      traefik-network:
{% endif %}
  # Apache Reverse Proxy (for LAN access)
  # Enables access via public domain (e.g., ossiba.com) while routing to internal domain (ossiba.local)
  # Use: docker compose --profile lan-access up -d
  apache-proxy:
    image: httpd:2.4-alpine
    container_name: {{ domain_prefix }}-apache-proxy
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./apache-config-host/apache-proxy-container.conf:/usr/local/apache2/conf/extra/proxy.conf:ro
      - ./certs:/certs:ro
    command: >
      sh -c "
      echo 'Include conf/extra/proxy.conf' >> /usr/local/apache2/conf/httpd.conf &&
      sed -i 's/#LoadModule proxy_module/LoadModule proxy_module/' /usr/local/apache2/conf/httpd.conf &&
      sed -i 's/#LoadModule proxy_http_module/LoadModule proxy_http_module/' /usr/local/apache2/conf/httpd.conf &&
      sed -i 's/#LoadModule ssl_module/LoadModule ssl_module/' /usr/local/apache2/conf/httpd.conf &&
      sed -i 's/#LoadModule socache_shmcb_module/LoadModule socache_shmcb_module/' /usr/local/apache2/conf/httpd.conf &&
      sed -i 's/#LoadModule rewrite_module/LoadModule rewrite_module/' /usr/local/apache2/conf/httpd.conf &&
      sed -i 's/#LoadModule headers_module/LoadModule headers_module/' /usr/local/apache2/conf/httpd.conf &&
      httpd-foreground
      "
    networks:
      traefik-network:
    depends_on:
      - traefik
    profiles:
      - lan-access

volumes:
  postgres-data:
  mysql-data:
  minio-data:

networks:
  traefik-network:
    driver: bridge
    name: {{ domain_prefix }}-traefik
  durango-backend:
    driver: bridge
    name: {{ domain_prefix }}-durango
  orangescrum-backend:
    driver: bridge
    name: {{ domain_prefix }}-orangescrum
