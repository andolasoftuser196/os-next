# Port Mappings for OrangeScrum Docker Setup
# Domain: {{ domain }}
# Generated: {{ generated_date }}
# Port Offset: {{ port_offset }} (auto-generated based on domain for multi-tenant support)

# Traefik ports (localhost only to avoid conflict with host Apache)
# Each domain gets unique ports automatically to support multiple instances
TRAEFIK_HTTP_PORT={{ traefik_http_port }}          # HTTP (internal, proxied by Apache from 80)
TRAEFIK_HTTPS_PORT={{ traefik_https_port }}         # HTTPS (internal, proxied by Apache from 443)
TRAEFIK_DASHBOARD_PORT={{ traefik_dashboard_port }}     # Dashboard (localhost only)

# Database ports (localhost only)
MYSQL_PORT={{ mysql_port }}                 # MySQL direct access
POSTGRES_PORT={{ postgres_port }}              # PostgreSQL direct access

# Cache/Queue ports (localhost only)
REDIS_PORT={{ redis_port }}                 # Redis direct access
MEMCACHED_DURANGO_PORT={{ memcached_durango_port }}    # V4 Memcached
MEMCACHED_ORANGESCRUM_PORT={{ memcached_orangescrum_port }}  # V2 Memcached

# Storage ports (localhost only)
MINIO_API_PORT={{ minio_api_port }}             # MinIO S3 API
MINIO_CONSOLE_PORT={{ minio_console_port }}         # MinIO Console

# Build settings
BUILDER_UID={{ builder_uid }}   # User ID for file permissions
